{
	"name": "svelte-vega",
	"version": "4.0.1",
	"license": "BSD-3-Clause",
	"description": "Render Vega or Vega-Lite charts using a Svelte component.",
	"author": "Alex Bäuerle <bauerlealex@gmail.com> (https://a13x.io), Ángel Alexander Cabrera <alex.cabrera@gmail.com> (https://cabreraalex.com)",
	"keywords": [
		"Vega-Lite",
		"Vega",
		"Visualization",
		"Svelte"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vega/svelte-vega.git"
	},
	"bugs": {
		"url": "https://github.com/vega/svelte-vega/issues"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"prebuild": "rm -rf ./dist",
		"build": "npm run package",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "yarn package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"semantic-release": "semantic-release"
	},
	"files": [
		"src",
		"dist"
	],
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/package": "^2.3.10",
		"@typescript-eslint/eslint-plugin": "^8.33.0",
		"@typescript-eslint/parser": "^8.29.0",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.5.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.2.12",
		"svelte": "^5.33.12",
		"svelte-check": "^4.1.5",
		"tslib": "^2.8.1",
		"typescript": "^5.8.2",
		"vite": "^6.2.4"
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"vega": "^6.0.0",
		"vega-embed": "^7.0.0",
		"vega-lite": "^6.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
